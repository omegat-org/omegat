<!DOCTYPE suppressions PUBLIC
     "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN"
     "https://checkstyle.org/dtds/suppressions_1_0.dtd">

<suppressions>
    <!-- languagetools classes -->
    <suppress files="(Arabic|Asturian|Belarusian|Breton|Catalan)Plugin\.java"
              checks="HideUtilityClassConstructor" />
    <suppress files="(Danish|German|Greek|English|Esperanto|Chinese)Plugin\.java"
              checks="HideUtilityClassConstructor" />
    <suppress files="(Spanish|Persian|French|Irish|Galician|Italian)Plugin\.java"
              checks="HideUtilityClassConstructor" />
    <suppress files="(Japanese|Khmer|Dutch|Polish|Poruguese|Romanian)Plugin\.java"
              checks="HideUtilityClassConstructor" />
    <suppress files="(Russian|Slovak|Slovenian|Swedish|Tamil|Tagalog|Ukrainian)Plugin\.java"
              checks="HideUtilityClassConstructor" />

    <!-- machinetranslators -->
    <suppress checks="(DesignForExtension|MagicNumber|MemberName|HideUtilityClassConstructor)"
              files="(Apertium|DeepL|YandexCloud|Google2|IBMWatson|MyMemory)Translate\.java"/>

    <!-- Auto generated source files -->
    <suppress checks="WhitespaceAround"
            files="(StatisticsWindow|AlignPanel|EditingPanel|AlignMenuFrame|FilterBarSearch|EditingBehaviorPanel)\.java"/>

    <!-- interfaces -->
    <suppress files="IParseCallback\.java" checks="ParameterNumber"/>

    <!-- filters and Dialog forms -->
    <suppress files=".*(Dialog|Panel)\.java"
              checks="(DesignForExtension|MagicNumber|MemberName|WhitespaceAround)"/>
    <suppress files=".*Filter\.java"
              checks="(DesignForExtension|MagicNumber)"/>
    <suppress checks="WhitespaceAround"
            files="(AlignFilePicker|InstanceEditor|CreateGlossaryEntry|NewTeamProject|FilenamePatternsEditor|FilterEditor|SegmentPropertiesListCell|FilterBarReplace|ProjectFilesList|SearchWindowForm)\.java"
    />

    <!-- PluginInformation.java -->
    <suppress files="PluginInformation\.java" checks="NeedBraces" lines="167-192"/>

    <!-- SearchResultEntry.java -->
    <suppress checks="(MemberName|MissingSwitchDefault|ParameterNumber)" files="SearchResultEntry\.java"/>

    <suppress files="StaticUtils\.java" checks="EmptyStatement" lines="158,162,549"/>
    <suppress files="PatternConsts\.java" checks="LineLength" lines="50,259,294"/>

    <!-- tests -->
    <suppress checks="(MethodName|MemberName|OperatorWrap)" files=".*Test\.java"/>
    <suppress files="(TestFilterBase|TmxComplianceBase|FilterMasterTest)\.java" checks="(HiddenField|ParameterNumber)"/>
    <!-- expectation string lengthy -->
    <suppress files="ResourceBundleFilterTest\.java" checks="LineLength" lines="221"/>
    <suppress files="GlossarySearcherTest\.java" checks="LineLength" lines="118"/>
    <suppress files="MatchesVarExpansionTest\.java" checks="LineLength" lines="163"/>
    <suppress files="MoodlePHPFilterTest\.java" checks="LineLength" lines="55"/>
    <suppress files="MozillaDTDFilterTest\.java" checks="LineLength" lines="66"/>
    <suppress files="MozillaFTLFilterTest\.java" checks="LineLength" lines="63"/>
    <!-- avoid deprecated API imports in deprecated test -->
    <suppress files="XMLStreamReaderTest\.java" checks="(AvoidStarImport|InnerAssignment)"/>

    <suppress files="(LanguageTool|WordPredictor)Test\.java" checks="AvoidNestedBlocks"/>

    <!-- missing javadoc: temporary global suppression  -->
    <suppress checks="(DesignForExtension|MagicNumber)"
              files=".*"/>

</suppressions>

